<% if (topping.errors.present?) %>
<div class="alert-messages">
  <div class="alert alert-danger">
    <ul>
      <% topping.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
<%= form_with model: topping do |form| %>
  <div class="row">
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="btn-row">
    <hr />
    <%= form.submit nil, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', toppings_path, class: 'btn btn-secondary' %>
  </div>
<% end %>